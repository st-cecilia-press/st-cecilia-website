<form class="form-inline my-2 my-lg-0" action="/dance_search" method="post">
  <input class="form-control mr-sm-2" id="dance-search" type="search" name="search" placeholder="Search Dances" aria-label="Search Dances">
  <input type="hidden" id="hidden-slug" name="slug" value="">
  <button type="submit" class="btn btn-default my-2 my-sm-0">Submit</button>
  <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %> 
</form>
