<div class="container">
  <div class="col-md-6">
    <%= semantic_form_for(@page) do |f| %>
      <%= f.inputs do %>
        <%= f.input :slug %>
        <%= f.input :title %>
        <%= f.input :body, input_html: { data: { behavior: 'markdown' } } %> 
      <% end %>
      <%= f.button class: 'btn btn-default', id: 'submit' %>
    <% end %>
  </div>
</div>
